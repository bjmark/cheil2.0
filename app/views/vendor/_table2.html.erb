<%if items.empty?%>
  <tr>
    <td><%=kind_cn%></td>
    <td colspan="5" rowspan="1">
      <%=link_to '新建',vendor_item_new_path(@brief,kind)%>
    </td>
  </tr>
<%else%>
  <%n=0
  items.each do |e|%>
    <tr>
      <%(n+=1).upto(1)do %>
        <td colspan="1" rowspan="<%=items.length+1%>"><%=kind_cn%></td>
      <%end%>
      <td><%= simple_format(e.name)  %></td>
      <td><%= e.quantity  %></td>
      <td><%= e.price  %></td>
      <td><%= e.total%></td>
      <td>
        <%=link_to '修改',vendor_item_edit_path(@brief,e)%>
        <%=link_to '删除',vendor_item_del_path(@brief,e),confirm: 'Are you sure?', method: :delete %>
      </td>
    </tr>
  <%end%>
  <tr>
    <td colspan="5" rowspan="1">
      总计:<%=total%>
      <%=link_to '新建',vendor_item_new_path(@brief,kind)%>
    </td>
  </tr>
<%end%>

