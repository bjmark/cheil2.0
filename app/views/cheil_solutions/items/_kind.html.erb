<%
  #solutions/cheil/cheil_solution/items/_kind
#checked_items,items,kind_cn
%>
<%n=0
checked_items.each do |e|%>
  <tr class="<%=['odd','even'][(n+=1)%2]%>">
    <%n.upto(1)do %>
      <td colspan="1" rowspan="<%=checked_items.length%>">
        <%=kind_cn%>
      </td>
    <%end%>
    <td><%= e.name  %></td>
    <td><%= e.quantity  %></td>
    <td><%= e.note  %></td>
    <td><%= e.price  %></td>
    <td><%= e.total if e.total > 0 %></td>
    <td><%= e.solution.org.name %></td>
    <td class="last">
      <%if @cur_user.org.instance_of?(CheilOrg)%>
        <%=link_to('不选',uncheck_solution_item_path(e,:dest=>cheil_solution_path(@solution)),{:method => :put})%>
      <%end%>
    </td>
  </tr>
<%end%>

