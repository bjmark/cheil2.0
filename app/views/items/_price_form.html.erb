<%= form_for(@item,:url=>@path,:html=>{:class=>'form'}) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="group">
    名称:<%= @item.name %>
  </div>
  <div class="group">
    数量:<%= @item.quantity%>
  </div>
  <div class="group">
    <%= f.label :note,'说明',:class=>'label' %>
    <%= f.text_field :note,:class=>'text_field' %>
  </div>
  <div class="group">
    <%= f.label :price,'单价',:class=>'label' %>
    <%= f.text_field :price,:class=>'text_field' %>
  </div>
  <div class="group">
    <%= f.submit '提交' %>
    <%= link_to '取消', @back %>
  </div>
<% end %>
