<%=form_for(@brief,:html=>{:class=>'form'}) do|f|%>
  <div class="group">
    <%=f.label :name,'名称:',:class=>'label'%>
    <%= f.text_field :name,:class=>'text_field'%>
  </div>
  <div class="group">
    <%=f.label :req,'要求:',:class=>'label'%>
    <%=f.text_area :req,:size=>'60x3',:class=>'text_area'%>
  </div>
  <div class="group">
    <%=f.label :deadline,'期限:',:class=>'label'%>
    <%= f.date_select :deadline,:use_month_numbers => true %>
  </div>
  <div class="group navform wat-cf">
    <button class="button" type="submit">
      保存
    </button>
    <%if @back%>
      <span class="text_button_padding">或</span>
      <%= link_to '取消', @back,:class=>'text_button_padding link_button' %>
    <%end%>
  </div>
<%end%> 

