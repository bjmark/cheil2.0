<%
  #solutions/vendor/items/_total
#solution,total
%>
<% if total[:all] > 0%>
  <table class="table">
    <tbody>
      <tr>
        <th></th>
        <th>总计</th>
        <th>税率</th>
        <th>税后总计</th>
      </tr>
      <%n=0%>
      <%if total[:design] > 0%>
        <tr class="<%=['odd','even'][(n+=1)%2]%>">
          <td>设计</td>
          <td><%=total[:design]%></th>
          <td><%=percentage(solution.design_rate)%></td>
          <td><%=total[:design_r]%></td>
        </tr>
      <%end%>
      <%if total[:product] > 0%>
        <tr class="<%=['odd','even'][(n+=1)%2]%>">
          <td>制作</td>
          <td><%=total[:product]%></th>
          <td><%=percentage(solution.product_rate)%></td>
          <td><%=total[:product_r]%></td>
        </tr>
      <%end%>
      <%if total[:tran] > 0%>
        <tr class="<%=['odd','even'][(n+=1)%2]%>">
          <td>运输</td>
          <td><%=total[:tran]%></th>
          <td><%=percentage(solution.tran_rate)%></td>
          <td><%=total[:tran_r]%></td>
        </tr>
      <%end%>
      <%if total[:other] > 0%>
        <tr class="<%=['odd','even'][(n+=1)%2]%>">
          <td>其他</td>
          <td><%=total[:other]%></th>
          <td><%=percentage(solution.other_rate)%></td>
          <td><%=total[:other_r]%></td>
        </tr>
      <%end%>
      <tr class="<%=['odd','even'][(n+=1)%2]%>">
        <td>全部累计</td>
        <td><%=total[:all]%></th>
        <td></td>
        <td><%=total[:all_r]%></td>
      </tr>
    </tbody>
  </table>
<%end%>

