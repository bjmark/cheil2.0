<%
  #solutions/cheil/vendor_solution/show 
#@solution
%>
<%=render 'share/block',
  :nav=>{:partial=>'briefs/cheil/nav',
    :locals=>{:brief=>@solution.brief}},
    :contents=>[{:partial=>'solutions/cheil/cheil_solution/links',
      :locals=>{:solution=>@solution}}
]
%>
<%=render 'share/block',
      :title=>'附件',
      :content=>{:partial=>'solutions/cheil/cheil_solution/attaches/index',
        :locals=>{:solution=>@solution}} unless 
(@solution.attaches.empty? and @solution.checked_attaches.empty?)
%>

<%=render 'share/block',
  :title=>'子项',
  :content=>{:partial=>'solutions/cheil/cheil_solution/items/index',
    :locals=>{:solution=>@solution,:total=>@solution.total}
} unless @solution.items.empty? and @solution.checked_items.empty?
%>
<%=render 'share/block',
  :title=>'付款',
  :content=>{:partial=>'solutions/cheil/cheil_solution/payment/show'
} if @solution.approved?%>

<%=comments(@solution)%>


