<%
  #solutions/rpm/_links
#solution
%>
<br/>
<%= link_to '新建评论', new_comment_path(:solution_id=>solution.id)%>
|
<%unless solution.approved?%>
  <%=link_to '审定通过,开始执行', approve_solution_path(solution),:confirm=>'确定吗?',:method=>:put%>
<%else%>
  确认时间:<%=short_d(solution.approved_at)%>
  &nbsp; 
<%end%>
<%if solution.brief.status == 3 %>
  <%=link_to '取消审定', unapprove_solution_path(solution),:confirm=>'确定吗?',:method=>:put%>
<%end%>
<h2 class="title"><%=brief_name(solution.brief)%></h2>
