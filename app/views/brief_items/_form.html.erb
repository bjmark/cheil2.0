<%= form_for(@item,:html=>{:class=>'form'}) do |f| %>
  <%=hidden_field_tag 'brief_id',@brief.id%>
  <div class="group">
    <%= f.label :name,'名称',:class=>'label' %>
    <%= f.text_field :name,:class=>'text_field' %>
  </div>
  <div class="group">
    <%= f.label :quantity,'数量',:class=>'label' %>
    <%= f.text_field :quantity,:class=>'text_field' %>
  </div>
  <div class="group">
    <%= f.label :quantity,'说明',:class=>'label' %>
    <%= f.text_field :note,:class=>'text_field' %>
  </div>

  <div class="group">
    <div>
      <%= f.radio_button :kind,'design',:class=>'checkbox' %>
      <%=f.label :kind,'设计项',:class=>'radio'%>
    </div>
    <div>
      <%= f.radio_button :kind,'product',:class=>'checkbox' %>
      <%=f.label :kind,'制作项',:class=>'radio'%>
    </div>
  </div>
  <div class="group navform wat-cf">
    <button class="button" type="submit" name="save_one">
      提交
    </button>
    <span class="text_button_padding">或</span>
    <%= link_to '取消', brief_path(@brief),:class=>'text_button_padding link_button' %>
  </div>
<% end %>
