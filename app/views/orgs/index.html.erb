<h1>Listing orgs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Role</th>
    <th>Users</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @orgs.each do |org| %>
    <tr>
      <td><%= org.name %></td>
      <td><%= org.role %></td>
      <td> <% org.users.each  do |e| %>
          <%= link_to e.name,user_path(e) %>
        <%end%> </td>
      <td><%= link_to 'Show', org %></td>
      <td><%= link_to 'Edit', edit_org_path(org) %></td>
      <td><%= link_to 'Destroy', org, confirm: 'Are you sure?', method: :delete %></td>
      <td><%= link_to 'new user', new_user_path(:org_id=>org.id) %></td>
    </tr>
  <% end %>
</table>

