<%= form_for(@solution_item,:url=>update_price_solution_item_path(@solution_item),:html=>{:class=>'form'}) do |f| %>
  <% if @solution_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@solution_item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% @solution_item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="group">
    名称:<%= @solution_item.name %>
  </div>
  <div class="group">
    数量:<%= @solution_item.quantity%>
  </div>
  <div class="group">
    <%= f.label :note,'说明',:class=>'label' %>
    <%= f.text_field :note,:class=>'text_field' %>
  </div>
  <div class="group">
    <%= f.label :price,'单价',:class=>'label' %>
    <%= f.text_field :price,:class=>'text_field' %>
  </div>
  <div class="group">
    <%= f.submit '提交' %>
    <%= link_to '取消', vendor_solution_path(@solution_item.solution) %>
  </div>
<% end %>
