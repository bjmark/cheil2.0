<h1>Cheil App</h1>
<div id="block-login" class="block">
  <h2>登录</h2>
  <div class="content login">
    <div class="flash">
      <% if flash[:alert] %>
        <div class="message notice">
          <p>
          <%= flash[:alert] %>
          </p>
        </div>
      <% end %>
    </div>
    <%= form_tag session_path,:class=>'form login' do %>
      <div class="group wat-cf">
        <div class="left">
          <label class="label right">用户:</label>
        </div>
        <div class="right">
          <%= text_field_tag :name, params[:name],:class=>"text_field" %>
        </div>
      </div>
      <div class="group wat-cf">
        <div class="left">
          <label class="label right">密码:</label>
        </div>
        <div class="right">
          <%= password_field_tag :password, params[:password],:class=>"text_field" %>
        </div>
      </div>
      <div class="group navform wat-cf">
        <div class="right">
          <button class="button" type="submit">
            登录
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
